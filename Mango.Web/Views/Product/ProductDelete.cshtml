@model Mango.Web.Models.ProductDto

<form asp-action="ProductDelete">
    <input asp-for="ProductID" hidden />
    <br />
    <div class="row">

        <div class="col-2">
            <label asp-for="Name" class="control-label pt-2" style="font-size: 20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <label asp-for="Name" disabled class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="CategoryName" class="control-label pt-2" style="font-size: 20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <label asp-for="CategoryName" disabled class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="Description" class="control-label pt-2" style="font-size: 20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <label asp-for="Description" disabled class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="ImageUrl" class="control-label pt-2" style="font-size: 20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <label asp-for="ImageUrl" disabled class="form-control" />
        </div>

        <div class="col-2">
            <label asp-for="Price" class="control-label pt-2" style="font-size: 20px;"></label>
        </div>
        <div class="col-10 pb-3">
            <label asp-for="Price" disabled class="form-control" />
        </div>

        <div class="col-5 offset-2">
            <a asp-action="Index" class="btn-primary btn form-control">Back</a>
        </div>

        <div class="col-5">
            <input type="submit" value="Delete" class="btn btn-danger form-control" />
        </div>

    </div>
</form>
